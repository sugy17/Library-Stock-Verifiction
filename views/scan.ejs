        <%- include("message") -%>
        <div style="display: none" id="success_msg" class="alert alert-success" role="alert">
  			This is a success alert—check it out!
		</div>
		<div style="display: none" id="danger_msg" class="alert alert-danger" role="alert">
  			This is a danger alert—check it out!
		</div>
        <h1>Check Books in Library Database</h1>
        <div id="inner">
            <form id="js_submit" >
                <img src="/images/CMRIT.png" alt="" height="180px" width="180px">
                <p>RACK ID:
                <input type="text" id="rackID" name="rackID" placeholder="enter the rack ID" autocomplete="off"  autofocus required>
                </p>
                <p>BOOK ID:
                <input type="text" id="bookID" name="bookID" placeholder="enter the bookID" autocomplete="off" oninput="mySubmit()"  required>
                </p>
                <!--button type="submit" class="btn btn-primary" name="submit" value="check Book"> Check Book</button-->
            </form>
        </div>
    </div>
